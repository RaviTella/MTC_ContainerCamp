@model AzureReadingList.Models.Book
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Edit</h2>
<form action="Edit" method="post">
    <div class="row">
        <div class="container">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th class="col-xs-1 text-center">Title</th>
                        <th class="col-xs-1 text-center">Author</th>
                        <th class="col-xs-1 text-center">ISBN</th>
                        <th class="col-xs-1 text-center">Description</th>
                        <th class="col-xs-1 text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="text-center">@Html.EditorFor(book => book.title)</td>
                        <td class="text-center">@Html.EditorFor(book => book.author)</td>
                        <td class="text-center">@Html.EditorFor(book => book.isbn)</td>
                        <td class="text-center">@Html.EditorFor(book => book.description)</td>
                        <td class="text-center">
                            <div class="btn-group btn-group nav-justified">
                                <a asp-action="Save" asp-route-id="@Model.id" class="btn btn-warning active">
                                    <span class="glyphicon glyphicon-save"></span>Save
                                </a>
                                <a asp-action="Cancel" class="btn btn-success">
                                    <span class="glyphicon glyphicon-backward"></span>Cancel
                                </a>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</form>